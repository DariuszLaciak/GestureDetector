<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/lightBlue"
    android:weightSum="1">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:src="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/logo" />
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gesture_detector"
        android:layout_marginTop="155dp"
        android:fontFamily="serif-monospace"
        android:textStyle="bold"
        android:textSize="39sp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/drawingButton"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:text="@string/drawingGestures"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <Button
        android:id="@+id/accelerometerButton"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:text="@string/accelerometerGestures"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/drawingButton"
        android:layout_alignLeft="@+id/drawingButton"
        android:layout_alignStart="@+id/drawingButton" />

    <Button
        android:id="@+id/optionsButton"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:text="@string/options"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/accelerometerButton"
        android:layout_alignLeft="@+id/accelerometerButton"
        android:layout_alignStart="@+id/accelerometerButton" />
</RelativeLayout>